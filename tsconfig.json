{
  "compilerOptions": {

    "target": "es6",
    "module": "commonjs",
    "noEmitHelpers": true,
    "outDir": "./bin/bundle/",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "inlineSourceMap": true,
    "inlineSources": true,  
  },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/__tests__/*"
    ]
}
