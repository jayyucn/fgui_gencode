{
  "compilerOptions": {

    "target": "es2020",
    "module": "commonjs",
    "outDir": "./bin/bundle/",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": false,  
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,  
    "skipLibCheck": true,   
    "forceConsistentCasingInFileNames": true
  },
    "include": [
      "src/**/*",
      "libs/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}
